<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:id="@+id/pin_visual_"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enter your pin:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/pin_text"
        app:layout_constraintStart_toStartOf="@+id/pin_text"
        app:layout_constraintTop_toBottomOf="@+id/pin_text">

        <ImageView
            android:id="@+id/pin_visual_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pin_visual_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pin_visual_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pin_visual_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/circle_empty" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="6" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="9" />
        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#FFFADA"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pin_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_1"
                android:textColor="#FFFADA"
                android:layout_margin="5dp"
                android:text="C"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>